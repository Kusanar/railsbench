#!/usr/bin/env ruby

if ARGV.length == 0 || ARGV.length > 3
  puts "usage: perf_run iterations options [conf-name]"
  puts "example: perf_run 100 \"-bm=default -log\" pdata"
  exit 1
end

bindir = File.dirname(__FILE__)
require "#{bindir}/../lib/railsbench/perf_utils"

die("perf_run: RAILS_ROOT not set") unless ENV['RAILS_ROOT']

iterations = ARGV[0]
options = ARGV[1]

benchmark = "default"
benchmark = $1 if options =~ /-bm=([^ ]+)/

benchmark_file = benchmark_file_name(benchmark, ARGV[2])
perf_run("perf_run", iterations, options, benchmark_file)

__END__

